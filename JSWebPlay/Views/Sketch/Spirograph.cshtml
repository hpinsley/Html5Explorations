@{
    ViewBag.Title = "Spirograph";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/Sketch/Spirograph.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Sketch/SketchDraw.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Sketch/Spirograph.js")" type="text/javascript"></script>
<div id="leftPanel">

    <section id="valueInputs">
        <div class="row">
            <label>
                Count:</label>
            <input type="number" id="ctlCount" min="1" max="100" value="100" />
        </div>
        <div class="row">
            <label>
                Size:</label>
            <input type="number" id="ctlSize" min="1" max="500" value="340" />
        </div>
    </section>

    <section id="shapeSelection">
        <input type="radio" id="ctlTriangle" name="shapeChoice" value="Triangle" />
        <label for="CtlTriangle">Triangle</label>
        <input type="radio" id="ctlSquare" name="shapeChoice" value="Square" />
        <label for="CtlSquare">Square</label>
        <input type="radio" id="ctlOval" name="shapeChoice" value="Oval" checked="checked" />
        <label for="CtlOval">Oval</label>
    </section>

    <input type="button" id="CtlDraw" value="Draw" />

</div>
<canvas>
</canvas>
